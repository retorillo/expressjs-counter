doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title #{pageTitle}
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
  body
    div(class="container")
      div(class="row")
        div(class="col-xs-8 col-xs-offset-2")
          h1 Express.js Counter
          p Current value is
            strong(class="text-success") &nbsp;#{counter}
          p(class={"text-primary": !err, "text-danger": err}) #{msg}
          form(class="form", method="post")
            div(class={"form-group": true, "has-error": err})
              label(class="control-label") Incremental value
              input(class="form-control", autocomplete="off", value=lastinc, name="inc", type="text")
            input(class="btn btn-primary", type="submit", value="Increment")
